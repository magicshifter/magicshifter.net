header-bg-color = rgba(0,0,0,0.5)

video-bg-color = #f09d1c

gallery-bg-color = #0097ff

contact-bg-color = #ffff00

program-bg-color = #cc5adb

technical-bg-color = #01b001

footer-bg-color = #fff

feature-btn-bg-color = #004270
feature-btn-bg-color-hover = #002d4c

gallery-image-size = 150px

text-color = #333

body
    font-size 16px
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    color #333


section
    clear both
    padding 2em 10%
    margin -5px 0 0

a
    text-decoration none

h2
    font-size 1.5em
    padding 0 0 0.7em


iframe
    width 853px
    min-height 480px
    max-width 90%

p
    margin 0 0 0.5em

    &.btns 
        padding 1em 0 0

a.btn
    background-color feature-btn-bg-color
    font-weight bold
    padding 6px 12px
    font-size 0.9em
    color #fff
    margin 0 1.5em 0 0
    border-radius 5px

    &:hover
        background-color feature-btn-bg-color-hover


header.main
    background-image url(../img/magicshifter.jpg)
    padding 3em 0
    display inline-block
    width 100%
    box-sizing border-box
    font-size 1.1em
    position relative

    .container
        padding 1em 5%
        background-color rgba(0,0,0,0.5)


    img#logo,
    a
        position absolute


    img#logo
        width 20%

    div.desc
        margin 0 auto
        padding 1em
        width 40%
        color #fff
        position relative

        h1
            font-size 1.2em
            margin 0 0 0.6em

        p
            margin 0 0 0.2em


    a
        width 20%
        color #fff
        font-weight bold
        padding 1.6em 1em
        font-size 18px
        line-height 1.33
        font-size 1.2em
        text-align center
        right 5%
        &:hover
            text-shadow 0 .1em .2em yellow

        span
            display block

        img
            max-width 100%
            margin 0.3em 0 0




#video
    text-align center
    background-color video-bg-color

    p
        padding 0 0 1em



#images
    background-color gallery-bg-color
    display inline-block

    #upload
        float left
        width 40%
        min-width 400px

    .btn
        background-color darken(gallery-bg-color, 40%)

    a
        color #ffff00

        &.btn
            color #fff

    ul
        display inline-block
        float right
        height 150px
        width 520px
        overflow hidden

        li
            display inline-block
            margin 0 10px

        img
            height gallery-image-size
            border-radius gallery-image-size
            width gallery-image-size
            box-sizing border-box

#program 
    background-color program-bg-color
    text-align center

    .btn
        background-color darken(program-bg-color, 40%)


#technical
    background-color technical-bg-color

    > div 
        width 45%
        float left
        margin 0 2em 0 0

    
    table
        border 1px solid darken(technical-bg-color, 35%)
        float left
        text-align left

        thead tr 
            background-color darken(technical-bg-color, 25%)
 
        tr
            line-height 1.5

        td, th
            border 1px solid darken(technical-bg-color, 35%)
            padding 0.2em

        a
            color darken(technical-bg-color, 50%)

            &:hover
                color darken(technical-bg-color, 70%)


#contact
    background-color contact-bg-color
    text-align center

footer.main
    text-align center
    padding 0.5em 0

    div
        height 100%
        line-height 3em
        display inline-block
        vertical-align top

        a, span 
            vertical-align top

