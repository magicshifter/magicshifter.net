header-bg-color = rgba(0,0,0,0.5)

video-bg-color = #f09d1c

gallery-bg-color = #0097ff

contact-bg-color = #ffff00

program-bg-color = #cc5adb

technical-bg-color = #01b001

footer-bg-color = #fff

feature-btn-bg-color = #004270
feature-btn-bg-color-hover = #002d4c

gallery-image-size = 150px

text-color = #333
link-color = #fff

body
    font-size 16px
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    color #333


section
    clear both
    padding 2em 10%
    margin -5px 0 0
    box-sizing border-box

    h2
        font-size 1.5em
        padding 0 0 0.7em
        text-align center

a
    text-decoration none


iframe
    width 853px
    min-height 480px
    max-width 90%

p
    margin 0 0 0.5em

    &.btns 
        padding 1em 0 0

a.btn
    background-color feature-btn-bg-color
    font-weight bold
    padding 6px 12px
    font-size 0.9em
    color link-color
    margin 0 1.5em 0 0
    border-radius 5px

    &:hover
        background-color feature-btn-bg-color-hover


header.main
    background-image url(../img/magicshifter.jpg)
    padding 3em 0
    width 100%
    box-sizing border-box
    font-size 1.1em
    line-height 1.1em
    color #fff

    .container
        padding 1em 
        margin 0 5%
        background-color rgba(0,0,0,0.5)
        display inline-block

    img#logo,
    a,
    div.desc
        float left


    img#logo
        height 120px

    div.desc
        margin 0 0 0 2em
        width 45%

        p
            margin 0 0 0.2em

    h1
        font-size 1.2em
        margin 0 0 .5em

    h2
        font-size 1.1em
        margin 0 0 0.5em

    div.shop
        width 20%
        font-weight bold
        font-size 1.1em
        text-align center
        float right
        line-height 1.3em

        a 
            color link-color

            &:hover
                text-shadow 0 .1em .2em yellow

        span
            display block

        img
            max-width 100%
            margin 0.3em 0 0




#video
    text-align center
    background-color video-bg-color

    p
        padding 0 0 1em



#images
    background-color gallery-bg-color

    #upload
        width 80%
        text-align center
        margin 0 auto

    .btn
        background-color darken(gallery-bg-color, 40%)

    a
        color #ffff00

        &.btn
            color #fff

    ul
        display inline-block
        width 100%
        margin 2em auto 0

        li
            display inline-block
            margin 0 1%
            width 14%

        img
            border-radius 100%
            max-width 100%

#program 
    background-color program-bg-color
    text-align center

    .btn
        background-color darken(program-bg-color, 40%)


#technical
    background-color technical-bg-color

    .container
        margin 0 2em 0 0

    
    table
        border 1px solid darken(technical-bg-color, 35%)
        text-align left
        width 100%

        thead tr 
            background-color darken(technical-bg-color, 25%)
 
        tr
            line-height 1.5

        td, th
            border 1px solid darken(technical-bg-color, 35%)
            padding 0.2em

        a
            color #ffff00

            &:hover
                color darken(technical-bg-color, 80%)


#contact
    background-color contact-bg-color
    text-align center

footer.main
    text-align center
    padding 1.5em 0 .5em

    div
        height 100%
        line-height 3em
        display inline-block
        vertical-align top

        a, span 
            vertical-align top

        img
            padding 0 0.5em 0 1em

