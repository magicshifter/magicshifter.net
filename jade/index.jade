						td UV LED
						td SAFW43sf
						td: a(href="/datasheets/SM1206UV-395-IL.pdf") PDF
					tr
						td High Power White LED
						td GFW232spgj
						td: a(href="/datasheets/GFW232spgj.pdf") PDF
					tr
						td High Power Infrafred LED
						td HIR11-21C/L11/TR8
						td a(href="/datasheets/HIR11-21C_L11_TR8.pdf") PDF
					tr
						td High Power Infrafred LED
						td HIR11-21C/L11/TR8
						td: a(href="/datasheets/HIR11-21C_L11_TR8.pdf") PDF
					tr
