@media (min-width: 901px)
	header.main
		div.desc
			h1
				float left

			h2
				float right

			div
				clear both

@media (max-width: 1100px)
	header.main
		div.shop
			width 20%

@media (max-width: 920px)
	header.main
		div.shop,
		div.social
			clear both
			display block
			padding .5em 0 0
			width 100%
			font-size 1.2em

			a
				float none
		div.desc
			width 60%



@media (max-width: 777px)
	header.main 
		img#logo,
		a,
		div.desc,
		div.shop
			font-size 0.9em

		a
			margin 0
			float none

		img#logo
			max-width 35%
			height auto

		div.desc
			width 59%

		
		div.social ul li a img
			width 100%
			height 100%
			max-width 40px
			max-height 40px

	#images ul li
		width 30%
		margin 1%


@media (max-width: 730px)
	a.btn
		display inline-block
		margin 0 0 1em

	header.main
		font-size 1em

@media (max-width: 666px)
	header.main
		div.desc
			width 50%


@media (max-width: 500px)
	header.main
		div.social ul
			width 60%
			margin 0 auto
			min-width 200px

			li a img
				max-height 50px
				max-width 50px

@media (max-width: 400px)
	#images ul li
		width 45%
		margin 1%

	header.main 
		text-align center

		img#logo,
		a,
		div.desc
			float none
			width 100%
			margin 0

		img#logo
			max-width 60%
		h1
			display none

		a
			margin 1em 0 0

	table
		font-size 0.8em

	footer.main #aws a img
		display block
		margin 0 auto