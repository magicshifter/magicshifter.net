@media (min-width: 500px)
  header.main
    .menu-toggle
      display none

    &.small
      nav
        top 15px
        margin 0

    nav
      background-color transparent
      clear none
      float right
      font-size 1em
      position relative
      right auto
      width auto
      padding 0
      margin 0
      top 45px

      &.show
        right 0

      ul
        display inline-block
        padding 0 .5em
        text-align center

        li
          float left
          margin 0 .2em

  table
    font-size 1em

  footer.main > div a img
    display inline
