  section.gallery
    ul
      each pic in pics
        li
          span(class=pic)

block content

  include ../sections/hero

  include ../sections/social

  include ../sections/video

  +gallery(['shadows', 'goggles', 'shadows-2'])

  include ../sections/description

  +gallery(['girafe', 'oneup', 'heart'])

  include ../sections/new

  +gallery(['shadows-2', 'goggles', 'shadows'])

  include ../sections/features

  +gallery(['invader', 'mario', 'nyan'])

  include ../sections/program

  +gallery(['ccc29', 'bike', 'oneup'])

  include ../sections/timeline

