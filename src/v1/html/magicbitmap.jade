extends ../layout.jade

block content
  form(name='controls', action='')
    fieldset
      h1 Create MagicShifter Animation/Bitmap

      div.field
        label(for='uploadBitmap') Select Bitmap for animation/bitmap:
        input#uploadBitmap(type='file', value='upload')

      div.field
        label(for='nrOfFrames') Frames:
        input#nrOfFrames(type='text', value='1')

      div.field
        label(for='frameWidth') Frame Width:
        input#frameWidth(type='text', value='16')

      div.field
        label(for='frameHeight') Frame Height:
        input#frameHeight(type='text', value='16')

      div.field
        label(for='frameDelayMs') Frame Delay (ms):
        input#frameDelayMs(type='text', value='16')

      div.field
        label(for='bitmapBitPerPixel') Bit/Pixel:
        select#bitmapBitPerPixel
          option(value='24') 24
          option(value='8') 8
          option(value='1') 1

      div.field
        label(for='bitmapFileName') Animation/Bitmap Filename:
        input#bitmapFileName(type='text', value='')

      div.field
        input#saveAsBitmap(
          type='button',
          value='save animation/bitmap',
          onclick='SaveBitmap();'
        )

      div.field
        canvas#canvasActiveBitmap(
          width='100',
          height='100',
          style='background-color:#000000; color:#FFFFFF;'
        )
        canvas#canvasScaledBitmap(
          width='100'
          height='100'
          style='background-color:#000000; color:#FFFFFF;'
        )

      div.field
        input(
          type='button',
          id='extractFont',
          value='extract font',
          onclick='CreateFont(function(canvas, startChar, endChar, fontWidth, fontHeight) {  ExtractPixelFont(document.getElementById("canvasBuffer"), canvas, startChar, endChar, fontWidth, fontHeight); }, FONT_START_CHAR, FONT_END_CHAR, FONT_CHAR_WIDTH, FONT_CHAR_HEIGHT);'
        )

  script(src=dirs.v1.js + 'magic.js')
